<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_margin="12sp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ms_Image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/macdonals" />
        
        <TextView
            android:id="@+id/ms_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ms_Image"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            tools:text="Mc Donals"/>

        <RatingBar
            android:id="@+id/ms_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_name"
            android:layout_toRightOf="@id/ms_Image"
            android:layout_marginLeft="10dp"
            tools:rating="3.4"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/ms_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_rating"
            android:layout_toRightOf="@id/ms_Image"
            android:layout_marginLeft="10dp"
            tools:text="jdjadksa djasdkajsdksa dhaskjdaskdjas sjdksajdakdas"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>